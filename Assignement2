package assignement2;
import java.lang.Math;//adds the math library
import java.util.Scanner;//adds the scanner library
/**
 *
 * @author 957353
 */
public class Assignement2 {

    /**
     * @param args the command line arguments
     */
public static void main(String[] args) {
    // TODO code application logic here
    Scanner sc = new Scanner(System.in);//prepares keyboard for input
    boolean repeat = true;
    do {
    System.out.print("enter a whole number: ");
    int num = sc.nextInt();
    int first = num;
    int term = 1;
    int high = num;
    System.out.print("the Collatz sequence for " + first + " is: " + first + "; ");
    
        do { 
            if (num == 1) break;
            if (num %2 == 0) {
            num = num / 2;
            } else {
                num = num * 3 + 1;
            }
            term = term + 1;
            System.out.print(num + "; ");
            if (num > high) {
                high = num;
            }
        } while (num != 1);
    System.out.println();
    System.out.println("number of terms " + term);
    System.out.println("highest value reached " + high);
    System.out.print("Do another? (y/n) ");
    char again = sc.nextLine().toUpperCase().charAt(0);
    if (again == 'N') repeat = false;
    } while (repeat == true); 
    System.out.print("goodbye");
  }
}
